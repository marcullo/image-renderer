root = true
# Note: We decided not to enforce `max_line_length` anywhere.

[*]
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.ld]
indent_style = 2
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
